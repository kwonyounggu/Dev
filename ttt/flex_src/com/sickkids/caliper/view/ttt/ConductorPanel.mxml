<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 creationComplete="panelCreationCompleteHandler(event)"
		 >
	<s:layout>
		<s:VerticalLayout gap="0" paddingTop="2" paddingRight="2" paddingBottom="2" paddingLeft="2"/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
		public var position:String="";//DR (saying left side), RN (saying right side)
			
			protected function panelCreationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				trace("INFO: width="+this.width+", height="+this.height+" in panelCreationCompleteHandler() of ConductorPanel.mxml");
			}
			
			protected function localVideoDisplayMouseHandler(event:MouseEvent):void
			{
				trace("INFO: event.type="+event.type+" in localVideoDisplayMouseHandler() of ConductorPanel.mxml");
				if(event.type==MouseEvent.MOUSE_OVER)
				{
					localVideoDisplay.percentWidth=100;
					localVideoDisplay.percentHeight=98;
				}
				else if(event.type==MouseEvent.MOUSE_OUT)
				{
					localVideoDisplay.percentWidth=25;
					localVideoDisplay.percentHeight=25;
				}
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:BorderContainer id="topBorderContainer" width="100%" height="56%" borderWeight="0" borderAlpha="0" backgroundColor="0xffffff">
		
		<s:VideoDisplay id="localVideoDisplay" width="25%" height="24%" bottom="3" right="0" mouseOver="localVideoDisplayMouseHandler(event)" mouseOut="localVideoDisplayMouseHandler(event)">
			
		</s:VideoDisplay>
	</s:BorderContainer>
	<s:BorderContainer id="bottomBorderContainer" width="100%" height="44%" borderWeight="0" borderAlpha="0" >
		<s:layout>
			<s:VerticalLayout paddingTop="2" paddingRight="2" paddingBottom="2" paddingLeft="2"/>
		</s:layout>
	</s:BorderContainer>
	
</s:Panel>
